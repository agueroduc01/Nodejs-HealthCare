<h1>Hello world!</h1>
<p>{{data.length}}</p>
</br>
<div class="mt-4">
    <div class="row">
        <table id="customers">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                        <td>{{email}}</td>
                        <td>{{address}}</td>
                        <td>
                            <a href="/detail-user/{{id}}"><button type="button">Details</button></a>
                            <a href="/edit-user/{{id}}"><button type="button">Edit</button></a>
                            <form action="/delete-user" method="POST">
                                <input type="text" hidden value="{{id}}" name="id"/>
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div class="mt-4">
    <div class="row">
        <div class="col text-center">
            <div class="">
                <h3>Create a new user at here</h3>
            </div>
            <div>
                <a href="/get-create-new-user"><button type="button">Create</button></a>
            </div>
        </div>
    </div>
</div>
