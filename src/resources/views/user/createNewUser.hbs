<div class="container">
    <div class="mt-4">
        <div class="row">
            <div class="col text-center">
                <form action="/post-create-new-user" method="POST">
                    <div>
                        <label for="inputFirstName">First Name</label><br>
                        <input type="text" name="firstName" placeholder="First Name" class="px-2" />
                    </div>
                    <div>
                        <label for="inputLastName">Last Name</label><br>
                        <input type="text" name="lastName" placeholder="Last Name" class="px-2" />
                    </div>
                    <div>
                        <label for="inputEmail">Email</label><br>
                        <input type="email" name="email" placeholder="Email" class="px-2" />
                    </div>
                    <div>
                        <label for="inputPassword">Password</label><br>
                        <input type="password" name="password" placeholder="Password" class="px-2" />
                    </div>
                    <div>
                        <label for="inputAddress">Address</label><br>
                        <input type="text" name="address" placeholder="1234 Street" class="px-2" />
                    </div>
                    <div>
                        <label for="inputPhoneNumber">Phone Number</label><br>
                        <input type="text" name="phoneNumber" placeholder="Phone Number" class="px-2" />
                    </div><br />
                    <div>
                        <label for="">Sex</label>
                        <select name="gender">
                            <option value="1"> Male </option>
                            <option value="0"> Female </option>
                        </select>
                    </div><br />
                    <div>
                        <label for="">Role</label>
                        <select name="roleId">
                            <option value="R1"> Admin </option>
                            <option value="R2"> Doctor </option>
                            <option value="R3"> Patient </option>
                        </select>
                    </div>
                    <br>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>