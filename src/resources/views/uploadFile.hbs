<div class="mt-4">
    <div class="row">
        <div class="col-lg-6">
            <div>{{checkString}}</div>
        </div>
        <div class="col-lg-6">
            <div id="customers">
                <form method="POST" action="/upload-profile-pic" enctype="multipart/form-data">
                    <label for="">Select single file</label>
                    <div>
                        <input type="file" name="profile_pic" />
                    </div>
                    <div class="mt-3">
                        <button type="submit">Save file</button>
                    </div>
                </form>
                <br>
                <form method="POST" action="/upload-multiple-pics" enctype="multipart/form-data">
                    <label for="">Select multiple files</label>
                    <div>
                        <input type="file" name="multiple_pics" multiple/>
                    </div>
                    <div class="mt-3">
                        <button type="submit">Save file</button>
                    </div>
                </form>                
            </div>
        </div>
    </div>
</div>